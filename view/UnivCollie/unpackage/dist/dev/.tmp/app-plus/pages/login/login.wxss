	border-radius: 10px 10px;
}
.input-group::before {
	position: absolute;
	right: 0;
	top: 0;
	left: 0;
	height: 1px;
	content: '';
	-webkit-transform: scaleY(.5);
	-ms-transform: scaleY(.5);
	    transform: scaleY(.5);
	background-color: #c8c7cc;
}
